<div class="page" id="page">
  {{> organisms-header }}
  <div role="main">
    {{# emergency }}{{> molecules-alert:error }}{{/ emergency }}
    {{# hero }}{{> molecules-block-hero }}{{/ hero }}

    <div class="g g-3up">
      {{# touts }}
        <div class="gi">
          {{> molecules-block-inset }}
        </div>
      {{/ touts }}
    </div><!--/g-3up-->

    {{> atoms-hr }}

    <div class="l-two-col">
      <div class="l-main">
        <section class="section latest-posts">
          <h2 class="section-title">Latest Posts</h2>
          <ul class="post-list">
            {{# latest-posts }}
              <li>{{> molecules-media-block }}</li>
            {{/ latest-posts }}
          </ul>
          <a href="{{ link.pages-blog }}" class="text-btn">View more posts</a>
        </section>
      </div><!--/l-main-->

      <div class="l-sidebar">
        {{> organisms-recent-tweets }}
      </div><!--/l-sidebar-->
    </div><!--/l-two-col-->
  </div><!--/main-->
  {{> organisms-footer }}
</div><!--/page-->
